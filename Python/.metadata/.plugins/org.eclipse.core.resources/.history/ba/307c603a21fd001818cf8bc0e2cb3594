def count_words(datei):
    d = {}
    for line in datei:
        for w in line.split():
            w.lower()
            if w not in d:
                d[w] = 1
            else:
                d[w] += 1
            
    return d

def count_chars(datei):
    d = {}
    for line in datei:
        line.replace(' ','')
        line.replace('\n','')
        for c in line:
            c.lower()
            if c not in d:
                d[c] = 1
            else:
                d[c] += 1
                
    return d
##MAIN
datei = list(open("a31-midsummernightsdream.txt"))

for i,line in enumerate(datei):
    if "ACT I" in line:
        datei = datei[i:]
        break
    

print("Zeilen: ",len(datei))

words = count_words(datei)
chars = count_chars(datei)
print(words)
print(chars)


